<div id="signu-container" class="row">
	<div class="col-lg-6 col-xs-12 col-md-12 col-md-push-3">

		<%= form_for(:user, url: {:controller => 'users', :action => 'create'}, html: {class: ""}) do |f| %>

			<div class="form-group">
				<label for="exampleInputEmail1">Username</label>
				<%= f.text_field :username, :class => "form-control" %>
				<%= render(:partial => 'form_error', :locals => {:object => @user, :key => :username})%>
			</div>

			<div class="form-group">
				<label for="exampleInputEmail1">Email address</label>
				<%= f.text_field :email, :class => "form-control" %>
				<%= render(:partial => 'form_error', :locals => {:object => @user, :key => :email})%>
			</div>

			<div class="form-group">
				<label for="exampleInputEmail1">First Name</label>
				<%= f.text_field :first_name, :class => "form-control" %>
				<%= render(:partial => 'form_error', :locals => {:object => @user, :key => :first_name})%>
			</div>

			<div class="form-group">
				<label for="exampleInputEmail1">Last Name</label>
				<%= f.text_field :last_name, :class => "form-control" %>
				<%= render(:partial => 'form_error', :locals => {:object => @user, :key => :last_name})%>
			</div>

			<div class="form-group">
				<label for="exampleInputPassword1">Password</label>
			    <%= f.password_field :password, :class => "form-control" %>
			    <%= render(:partial => 'form_error', :locals => {:object => @user, :key => :password})%>
			</div>

			<div class="form-group">
		    	<button type="submit" class="btn btn-default">Log in</button>
		    </div>

		<% end %>

	</div>
</div>